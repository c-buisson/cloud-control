<domain type='kvm'>
  <name><%= name %></name>
  <uuid><%= uuid %></uuid>
  <memory><%= ram %></memory>
  <currentMemory><%= ram %></currentMemory>
  <vcpu><%= cores %></vcpu>
  <os>
    <type>hvm</type>
    <boot dev='cdrom'/>
  </os>
  <features>
    <acpi/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <emulator>/usr/bin/kvm</emulator>
<% if type == "cloud" %>
    <disk type="file" device="disk">
      <driver type="qcow2" cache='none'/>
      <source file="<%= KVM_GUEST_IMAGE %>/<%= name %>.img"/>
      <target dev="vda" bus="virtio"/>
    </disk>
    <disk type="file" device="disk">
      <source file="<%= USER_DATA %>/<%= user_data %>"/>
      <target dev="vdb" bus="virtio"/>
    </disk><% elsif type == "iso" %>
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2"/>
      <source file="<%= KVM_GUEST_IMAGE %>/<%= name %>.img"/>
      <target dev="vda" bus="virtio"/>
      <address type="pci" domain="0x0000" bus="0x00" slot="0x04" function="0x0"/>
    </disk>
    <disk type="file" device="cdrom">
      <driver name="qemu" type="raw"/>
      <source file="<%= ISO %>/<%= source %>"/>
      <target dev="hdc" bus="ide"/>
      <readonly/>
      <address type="drive" controller="0" bus="1" target="0" unit="0"/>
    </disk><% end %>
    <controller type="ide" index="0">
      <address type="pci" domain="0x0000" bus="0x00" slot="0x01" function="0x1"/>
    </controller>
    <interface type='bridge'>
      <mac address='<%= mac_address %>'/>
      <source bridge='<%= network_type %>'/>
    </interface>
    <input type='mouse' bus='ps2'/>
    <graphics type='vnc' port='<%= vnc_port %>' autoport="no" listen='0.0.0.0'/>
  </devices>
</domain>
